{
  "compilerOptions": {
    "lib": ["DOM"],
    "target": "ES6",
    "module": "CommonJS",
    "jsx": "react",
    "allowSyntheticDefaultImports": true,
    "importHelpers": true,
    "esModuleInterop": true,
    "resolveJsonModule": true,
    "noImplicitAny": false,
    "moduleResolution": "node",
    "forceConsistentCasingInFileNames": true
  },
  "include": ["**/*.ts", "src/**/*.ts", "typings/**/*.ts"],
  "exclude": ["node_modules"]
}
